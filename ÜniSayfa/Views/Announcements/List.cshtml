@using EntitiyLayer.Concrete;
@model IEnumerable<Announcement>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Duyuru Listesi</h2>
        </div>
     
    </div>
    <br /><br />

    <table class="table table-bordered table-stiped" style="width: ;100%">
        <thead>
            <tr>
                <th>
                    Duyuru Başlığı
                </th>
                <th>
                    Duyuru Açıklaması
                </th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.AnnouncementTitle
                    </td>
                   
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Announcements" asp-action="Edit" asp-route-id="@obj.ID"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Düzenle</a>
                            <form asp-controller="Announcements" asp-action="Delete" asp-route-id="@obj.ID" method="post">
                                <button type="submit" class="btn btn-lg btn-primary mt-2">
                                    Sil

                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>